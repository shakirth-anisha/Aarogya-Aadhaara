<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/patientImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="#D3F1F5"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/user"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/patientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#D3F1F5"
        app:layout_constraintStart_toEndOf="@id/patientImage"
        app:layout_constraintTop_toTopOf="@id/patientImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/patientAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age: 30"
        android:textSize="20sp"
        android:background="#D3F1F5"
        app:layout_constraintStart_toStartOf="@id/patientName"
        app:layout_constraintTop_toBottomOf="@id/patientName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/patientPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone: 123-456-7890"
        android:textSize="20sp"
        android:background="#D3F1F5"
        app:layout_constraintStart_toStartOf="@id/patientName"
        app:layout_constraintTop_toBottomOf="@id/patientAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/patientDoses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Doses: 60/63"
        android:textSize="20sp"
        android:background="#D3F1F5"
        app:layout_constraintStart_toStartOf="@id/patientName"
        app:layout_constraintTop_toBottomOf="@id/patientPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/patientImage"
        app:layout_constraintHorizontal_bias="0" />

    <Button
        android:id="@+id/readMoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/patientDoses"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
